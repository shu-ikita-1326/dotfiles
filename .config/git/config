[alias]
	st = status -s
	br = branch
	bra = branch -avv
	co = checkout
	cm = commit
	sh = stash
	shs = stash save
	sw = switch
	df = diff
	ps = push
	psh = push -u origin HEAD
	pl = pull
	br = branch
  f = fetch
  wipe = !git reset --hard && git clean -f
	graph = log --pretty=format:'%Cgreen[%cd] %Cblue%h %Cred<%cn> %Creset%s' --date=short  --decorate --graph --branches --tags --remotes
	diffw = diff --word-diff
[commit]
	template = ~/.config/git/gitmessage
[merge]
	ff = false
[pull]
	ff = only
[core]
	autocrlf = false
	ignorecase = false
	quotepath = false
